@model BookModel;

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageURL) ? "/images/noimage.jpg": Model.CoverImageURL)" class="img-thumbnail" alt="No image Found">
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : Model.Title)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not available" : Model.Description)</p>
        <div class="btn-group">
            <a asp-route="BookDetailRoute" asp-route-id="@Model.Id" asp-fragment="similarbook" class="btn btn-sm btn-outline-secondary">View Details</a>
        </div>
        <small class="text-muted">@(string.IsNullOrEmpty(@Model.Author) ? "Author is not available" : @Model.Author)</small>
    </div>
</div>