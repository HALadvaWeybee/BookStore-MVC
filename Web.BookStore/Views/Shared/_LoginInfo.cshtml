@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a>
            Hello @User.FindFirst("FirstName")!.Value
        </a>
        <a class="btn btn-primary" asp-action="Logout" asp-controller="Account">Logout</a>
        <a class="btn btn-primary" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary" asp-action="Login" asp-controller="Account">Login</a>
        <a class="btn btn-primary" asp-action="Signup" asp-controller="Account">Register</a>
    </li>
}
